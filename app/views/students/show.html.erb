<h1><%= @student.name%>'s Page</h1>

<h2>Age: <%=@student.age%></h2>

<h2>Courses</h2>
<%= button_to "Register Course", new_enrollment_path, method: :get%>
<ul>
    <%@student.enrollments.each do |enrollment|%>
        <li><%= enrollments.course.name%></li>
        <%=button_to "Drop Enrollment", new_enrollment_path(enrollment), method: :delete%>
    <%end%>
</ul>

<%=button_to "Edit Student", edit_student_path, method: :get%>
<%=button_to "Delete Student", student_path, method: :delete%>

<%= link_to "Delete Student", student_path%>